source "https://rubygems.org"   # source des gems, ne pas oublier le bundle install 

ruby '3.2.2'  # version de ruby 

gem 'sinatra' # gem sinatra 
gem 'rerun'   # Pour le rechargement automatique du serveur
gem 'rackup'  # utilitaire pour démarrer une appli web basée sur le serveur rack, comme Sinatra, lance et gère HTPP pour l'appli
gem 'csv'     # format de fichier simple pour stocker des données sous forme de tableau // séparé par des virgules (tradcution)